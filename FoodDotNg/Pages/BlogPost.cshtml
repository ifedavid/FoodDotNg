@page "{postId:Guid}"
@model FoodDotNg.Pages.BlogPostModel
@inject FoodDotNgDbContext _context
@inject UserManager<ApplicationUser> userManager
@{
    ViewData["Title"] = "BlogPost";
    

}

<style>
    .postImage{
        height:450px;
        width:fit-content;
        object-fit:cover;
        width:max-content;
    }
</style>

<!-- ****** Breadcumb Area Start ****** -->
<div class="breadcumb-area" style="background-image: url(img/bg-img/breadcumb.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="bradcumb-title text-center">
                    @{ 
                        var category = await _context.ArticleCategories.FindAsync(Model.BlogPost.CategoryId);
                    }
                    <h2>@category.Name</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="breadcumb-nav">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i class="fa fa-home" aria-hidden="true"></i> Home</a></li>
                        <li class="breadcrumb-item"><a href="/ContentList/?pageName=@category.Name">@category.Name</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.BlogPost.Name</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ****** Breadcumb Area End ****** -->
<!-- ****** Single Blog Area Start ****** -->
<section class="single_blog_area section_padding_80">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="row no-gutters">

                    <!-- Single Post -->
                    <div class="col-sm-11">
                        <div class="single-post">
                            <!-- Post Thumb -->
                            <div class="post-thumb">
                                <img class="postImage" src="@Model.BlogPost.ImageUrl" alt="">
                            </div>
                            <!-- Post Content -->
                            <div class="post-content">
                                <div class="post-meta d-flex">
                                    <div class="post-author-date-area d-flex">
                                        <!-- Post Author -->
                                        <div class="post-author">
                                            @{
                                                var user = await _context.Users.FindAsync(Model.BlogPost.AuthorId);
                                            }
                                            <a href="#">by @user.UserName</a>
                                        </div>
                                        <div class="post-author">
                                            <a href="#">@Model.BlogPost.Category.Name</a>
                                        </div>
                                        <!-- Post Date -->
                                        <div class="post-date">
                                            <a href="#">@Model.BlogPost.DateCreated.ToLongDateString()</a>
                                        </div>
                                    </div>
                                </div>
                                <a href="#">
                                    <h2 class="post-headline">@Model.BlogPost.Name</h2>
                                </a>
                                <div id="blogpost">
                                    @Html.Raw(Model.BlogPost.ArticlePost)
                                </div>

                            </div>
                        </div>

                        <!-- Related Post Area -->
                        <div class="related-post-area section_padding_50">
                            <h4 class="mb-30">Related post</h4>

                            <div class="related-post-slider owl-carousel">
                                <!-- Single Related Post-->
                                <div class="single-post">
                                    <!-- Post Thumb -->
                                    <div class="post-thumb">
                                        <img src="~/img/blog-img/15.jpg" alt="">
                                    </div>
                                    <!-- Post Content -->
                                    <div class="post-content">
                                        <div class="post-meta d-flex">
                                            <div class="post-author-date-area d-flex">
                                                <!-- Post Author -->
                                                <div class="post-author">
                                                    <a href="#">By Marian</a>
                                                </div>
                                                <!-- Post Date -->
                                                <div class="post-date">
                                                    <a href="#">May 19, 2017</a>
                                                </div>
                                            </div>
                                        </div>
                                        <a href="#">
                                            <h6>The Top Breakfast And Brunch Spots In Hove</h6>
                                        </a>
                                    </div>
                                </div>

                                <!-- Single Related Post-->
