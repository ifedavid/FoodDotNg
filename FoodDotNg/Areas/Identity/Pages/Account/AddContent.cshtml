@page
@model FoodDotNg.Areas.Identity.Pages.Account.AddContentModel
@inject FoodDotNg.Data.FoodDotNgDbContext _context;
@inject UserManager<FoodDotNg.Data.ApplicationUser> _userManager;
@{
    Layout = "_WriterLayout";
    var user = await _userManager.GetUserAsync(User);
}


<div class="container">
    <!--Selector-->
    <div class="Selector">
        <label>Select type of content to add</label>
        <select id="ContentType" class="form-control">
            <option selected></option>
            <option value="Event">Event</option>
            <option value="Recipe">Recipe</option>
            <option value="Article">Article</option>
        </select>
    </div>

    <!--Add Article-->
    <div class="ArticlePost">
        <form method="post" asp-page-handler="AddContent" asp-route-type="Article" style="padding-top:2em;">
            <h4>Add an Article</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Article Name</label>
                <input asp-for="ContentModel.BlogPostName" class="form-control" placeholder="Article Name" />
            </div>

            <div class="form-group">
                <label>Category</label>
                @{
                    var categories = _context.ArticleCategories.ToList();
                    var categoriess = categories.Select(ca => new SelectListItem { Text = ca.Name, Value = ca.Id.ToString() });
                }
                <select asp-for="ContentModel.articleCategoryId" asp-items="categoriess" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label>Article Post</label>
                <textarea asp-for="ContentModel.BlogPost" style="height:200px;" placeholder="<p></p>" class="form-control"></textarea>
            </div>

            <input asp-for="ContentModel.authorId" hidden value="@user.Id" />
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <!--Add Event-->
    <div class="EventPost">
        <form method="post" asp-page-handler="AddContent" asp-route-type="Event" style="padding-top:2em;">
            <h4>Add an Event</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Event Name</label>
                <input asp-for="ContentModel.BlogPostName" class="form-control" placeholder="Event Name" />
            </div>

            <div class="form-group">
                <label>Event Organizer</label>
                <input asp-for="ContentModel.eventOrganizer" class="form-control" placeholder="Event Organizer" />
            </div>

            <div class="form-group">
                <label>Event start Date</label>
                <input asp-for="ContentModel.EventStart" type="date" class="form-control" />
            </div>


            <div class="form-group">
                <label>Event end Date</label>
                <input type="date" asp-for="ContentModel.EventEnd" class="form-control" />
            </div>

            <div class="form-group">
                <label>Event Details</label>
                <textarea asp-for="ContentModel.BlogPost" style="height:100px;" placeholder="" class="form-control"></textarea>
            </div>

            <input asp-for="ContentModel.authorId" hidden value="@user.Id" />
            <button type="submit" class="btn btn-primary">Submit</button>

        </form>
    </div>

    <!--Add Recipe-->
    <div class="RecipePost">
        <form method="post" asp-page-handler="AddContent" asp-route-type="Recipe" style="padding-top:2em;">
            <h4>Add a Recipe</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Article Name</label>
                <input asp-for="ContentModel.BlogPostName" class="form-control" placeholder="Recipe Name" />
            </div>
            <div class="form-group">
                <label>Recipe Ingredients</label>
                <input asp-for="ContentModel.RecipeIngredients" class="form-control tagsinput" placeholder="Recipe Ingredients **Seperated by Semicolon" />
            </div>
            <div class="form-group">
                <label>Recipe Steps</label>
                <input asp-for="ContentModel.RecipeSteps" class="form-control tagsinput" placeholder="Recipe steps **Separated by Semicolon" />
            </div>
            <div class="form-group">
                <label>Any extra Recipe talk</label>
                <textarea asp-for="ContentModel.BlogPost" style="height:100px;" class="form-control"></textarea>
            </div>

            <input asp-for="ContentModel.authorId" hidden value="@user.Id" />
            <button type="submit" class="btn btn-primary">Submit</button>

        </form>
    </div>
</div>


@section Scripts{
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>

    <script src="~/js/jquery.tagsinput-revisited.js"></script>

    <script>

        $('.tagsinput').tagsInput();
        //Jquery ish

        $('.tagsinput').tagsInput({
            interactive: true,
            placeholder: 'Add a tag separated by ;',
            hide: true,
            delimiter: [',', ';'], // or a string with a single delimiter
            unique: true,
        });

        $(document).ready(function () {

            $(".ArticlePost").hide();
            $(".RecipePost").hide();
            $(".EventPost").hide();

            $("#ContentType").change(function () {
                var contentType = $(this).val();

                if (contentType == "Event") {
                    $(".ArticlePost").hide();
                    $(".RecipePost").hide();
                    $(".EventPost").show();
                }

                if (contentType == "Recipe") {
                    $(".ArticlePost").hide();
                    $(".EventPost").hide();
                    $(".RecipePost").show();
                }

                if (contentType == "Article") {
                    $(".RecipePost").hide();
                    $(".EventPost").hide();
                    $(".ArticlePost").show();
                }
            });
        });
    </script>
}